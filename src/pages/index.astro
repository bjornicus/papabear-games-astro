---
import { Image } from 'astro:assets';
import papabear_hero from '../images/PapaBearLogo-tight.png';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Papa Bear Games.">
	<main>
		<Image src={papabear_hero} alt="Papa Bear Games Logo" class="mx-auto" />
		<ul role="list" class="link-card-grid grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-fit">
			<Card
				href="/spaceboots"
				title="SpaceBoots"
				body="Couch multiplayer 2D zero gravity twin stick shooter."
			/>
			<Card
				href="https://www.youtube.com/watch?v=ybcZgTcK3fs"
				title="Next Game"
				body="This one doesn't have a name yet"
			/>
		</ul>
	</main>
</Layout>
---
interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<li>
	<a
		href={href}
		class="block py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:p-0 md:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
		>{title}</a
	>
</li>
